{
    "name": "hexlet/code",
    "description": "program for getting differences between 2 files",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Svetlana Makarova",
            "email": "CBETA-MAKAPOBA@yandex.ru"
        }
    ],
    "require": {
        "docopt/docopt": "^1.0",
        "funct/funct": "^1.6",
        "symfony/yaml": "^7.3"
    },
    "bin": [
        "bin/gendiff"
    ],
    "autoload": {
        "files": [
            "src/Differ.php",
            "src/Parser.php",
            "src/Formatters/Stylish.php",
            "src/Formatters/Plain.php",
            "src/Formatters/Json.php",
            "src/Formatters.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
